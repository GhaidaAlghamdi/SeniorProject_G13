<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRloginNew"
    android:orientation="vertical"
    android:background="@drawable/design"
    android:focusableInTouchMode="true"
>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:context=".MainActivity"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:gravity="center_horizontal"
            android:text="نٌـظـم"
            android:textColor="#7EA2FA"
            android:textSize="50sp" />

        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="right"
            android:text="الرجاء اختيار طريقة تسجيل الدخول "
            android:textColor="#3B4C77"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_scan"
            style="@style/loginButton"
            android:layout_width="197dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/home_gradient"
            android:drawableRight="@drawable/qrcode22"
            android:gravity="center"
            android:text=" مسح بالباركود "
            android:textSize="20sp" />


        <Button
            android:id="@+id/back_btn"
            style="@style/loginButton"
            android:layout_width="200dp"
            android:layout_height="51dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_gradient"
            android:drawableRight="@drawable/email"
            android:onClick="onClickBack"
            android:text="  الإيميل"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>