<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design"
    android:focusableInTouchMode="true"
    tools:context=".riseabsence">

    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="251dp"
            android:layout_height="189dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/upload4"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="14dp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="370dp"
            android:layout_height="58dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="*الرجاء كتابة سبب الغياب أو إرفاق صورة من العذر*"
            android:textColor="#fa6e95"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="490dp" />

        <EditText
            android:id="@+id/txtdata"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="كتابة السبب"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="412dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnbrowse"
                style="@style/loginButton"
                android:layout_width="132dp"
                android:layout_height="49dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/home_gradient"
                android:gravity="center"
                android:text="اختيار صورة"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:gravity="right"
                android:text="المرفقات:"
                android:textColor="#3B4C77"
                android:textSize="21dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="490dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="152dp"
            android:layout_height="107dp"
            android:layout_marginLeft="25dp"
            />

        <Button
            android:id="@+id/btnupload"
            style="@style/loginButton"
            android:layout_width="109dp"
            android:layout_height="51dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/home_gradient"
            android:gravity="center"
            android:text="إرفاق"
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>